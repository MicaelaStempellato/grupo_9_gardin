<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/navbar') %>

    
    <div class="formularioProducto">
    <form action="/products/create" method="POST">
        <h2 class="formTitle">Editar curso <%=curso.nombre%></h2>
        <section>
            <input type="text" placeholder="Nombre" name="nombre" >
            <textarea name="descripcion" id="descripcion" cols="30" rows="10" placeholder="Descripción..."></textarea>
            <select name="edad" id="edad">
                <option value="">Edad recomendada</option>
                <option value="ninos">Niños</option>
                <option value="jovenes_adultos">Jóvenes adultos</option>
                <option value="adultos">Adultos</option>
            </select>
            <select name="experiencia" id="edad">
                <option value="">Experiencia recomendada</option>
                <option value="empezando">Empezando</option>
                <option value="con_conocimiento">Con conocimiento</option>
                <option value="avanzado">Avanzada</option>
            </select>
            <select name="ambiente" id="edad">
                <option value="">Ambiente</option>
                <option value="interior">Interior</option>
                <option value="patios_balcones">Patios y balcones</option>
                <option value="jardin">Jardín</option>
            </select>
        </section>
        <section>
            <input type="file" name="image">
            <input type="text" name="idioma" placeholder="Idioma">
            <input type="text" name="precio" placeholder="Precio Total">
            <textarea name="unidades" id="" cols="30" rows="10" placeholder="Unidades a ver..."></textarea>
        </section>
        <div class="botones_form">
        <button type="submit" class="crear_boton">Crear Curso</button>
        <button class="cancelar_boton"><a href="/">Cancelar</a></button>
        </div> 
    </form>
</div>


    <%- include('../partials/footer') %>
</body>
<%- include('../partials/linksJsAbajo') %>
</html>